@model Movie

<div class="form-group">

    <br />

    <h1 style ="text-align: center;">Update Movie Attributes</h1>

    <form asp-route="Update_Post" method="post" id="form">


        <input asp-for = "Id" type="number" class="form-control" id="Id" aria-describedby="Id" placeholder="Enter Id" readonly hidden>
        
        <br />

        <label for="Title" class="form-label mt-4">Title</label>

        <input asp-for="Title" type="text" class="form-control" id="Id" aria-describedby="Title" placeholder="Enter Title">

        <small id="Id" class="form-text text-muted">Movie Title should be a text</small>

        <br />

        <span asp-validation-for="Title" class="text-danger"></span>

        <br />

        <label for="Description" class="form-label mt-4">Description</label>

        <textarea asp-for="Description" type="text" class="form-control" id="Id" aria-describedby="Description" placeholder="Enter Description"> </textarea>

        <small id="Id" class="form-text text-muted">Type movie description</small>

        <br />

        <span asp-validation-for="Description" class="text-danger"></span>

        <br />

        <fieldset>

            Movie Type

            <select id="MovieTypeId" name="MovieTypeId" class="form-select">

                @foreach(var items in Model.Categories.Items)
                {
                   

                    if (Model.MovieTypeId == items.Id)
                    {
                        <option value="@items.Id" selected>@items.Name</option>
                    }
                    else
                    {
                        <option value="@items.Id">@items.Name</option>
                    }
                       
                }
                
            </select>

            <br />

            <span asp-validation-for="MovieTypeId" class="text-danger"></span>

            <br />

        </fieldset>

        <br />
         
        <div class = "btns">

            <button id="subButton" type="submit"  class="btn btn-info btn-lg" data-toggle="modal" data-target="#MyPopUp">Update database</button>
            <button id="AjaxSubButton" type="button" class="btn btn-info btn-danger">Ajax Update</button>
        </div>

        <br />
       
       
        <div id="Status" class="text-dark" style="display: inline;">
            <small id="Id" class="form-text text-muted">Status code appears here</small>
        </div>
           
       

        <br />

        <br />

        <h1 style="color:red;"> @ViewData["fail"] </h1>

        <div id="MyPopUp" class="modal fade" role="dialog">

            <div class="modal-dialog">

                <div class="modal-content">

                    <div class="modal-header">

                        <h5 class="modal-title">Warning</h5>

                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">

                            <span aria-hidden="true"></span>

                        </button>

                    </div>

                    <div class="modal-body">

                        <p>You are about to make changes in the database. Are you sure you want to continue?</p>

                    </div>

                    <div class="modal-footer">

                        <button type="submit" class="btn btn-primary">Save changes</button>

                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                    </div>

                </div>

            </div>

        </div>

        <h1 style="color:red;"> @ViewData["fail"] </h1>
    </form>
    
