@model MovieTypes

<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Details</th>
        <th>Edit</th>
        <th></th>
    </tr>
    @foreach (var item in Model.Items)
    {
        <tr class="table-secondary text-secondary">
            <td>@item.Id</td>

            <td>@item.Name</td>

            <td><a href="@Url.Action("Category_Details", "Movies", new {id = item.Id})">Details</a></td>

            <td><a href="@Url.Action("Update_Category", "Movies", new {id = item.Id})">Edit</a></td>

         
        </tr>
    }

</table>

<button id="subButton" onclick="@("window.location.href='" + @Url.Action("Create_Category", "Movies") + "'");"  type="submit" class="btn btn-primary btn-lg">Create Category</button>

