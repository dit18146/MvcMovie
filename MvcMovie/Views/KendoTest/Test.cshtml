@(
Html.Kendo().Grid<TestMovie>()
    .Name("Grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.Id);
        columns.Bound(p => p.Title).Title("Movie Title");
        columns.Bound(p => p.Description);
    })
    .Pageable(p => p.Refresh(true))
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .Read(r => r.Route("KendoGrid_Test_Read"))
    )
    )
