<kendo-grid name="grid">
    <groupable enabled="true" />
    <sortable enabled="true" />
    <filterable enabled="true" />
    <pageable enabled="true" />
    
    <columns>
        <column field="Id" width="120" />
        <column field="Title" />
        <column field="Description" width="300" />
        <column field="Name" width="250" />
    </columns>
    
   
   
    
    <datasource type="DataSourceTagHelperType.Ajax">
        <transport>
            <read url="@Url.Action("Kendo_Json", "Movies")" />
        </transport>
    </datasource>

    

</kendo-grid>


@section Scripts
{
    <script>
        function hideIdField(e) {
            $("#Id").hide();
            $("label[for='Id']").hide();
            $("#Name").hide();
            $("label[for='Name']").hide();
        }  
    </script>
}