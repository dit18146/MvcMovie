@model MovieViewModel




<div class="form-group">

    <br />

    <h1 style ="text-align: center;">Insert Movie</h1>

    <form asp-route = "Create" method = "post">


        <label for="Title" class="form-label mt-4">Title</label>

        <input asp-for="Title" type="text" class="form-control" id="Id" aria-describedby="Title" placeholder="Enter Title">

        <small id="Id" class="form-text text-muted">Movie Title should be a text</small>

        <br />

        <label for="Description" class="form-label mt-4">Description</label>

        <textarea asp-for="Description" type="text" class="form-control" id="Id" aria-describedby="Description" placeholder="Enter Description"> </textarea>

        <small id="Id" class="form-text text-muted">Type movie description</small>

        <br />

        <fieldset>

            Movie Type

            <select id="MovieTypeId" name="MovieTypeId">

                <option value=""></option>

                <option value="6">Adventure</option>

                <option value="7">Action</option>

                <option value="8">Comedy</option>

                <option value="9">Horror</option>

                <option value="10">N/A</option>

            </select>

            <br />

        </fieldset>

         <br />

        <button id="subButton" onclick="dialog()" type="submit" class="btn btn-secondary btn-lg">Add to Database</button>

        <br />

        <h1 style="color:red;"> @ViewData["fail"] </h1>

    </form>
    
</div>





<div class="modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Warning</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">
                <p>You are about to make changes in the database. Are you sure you want to continue?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



@section Scripts
{

    <script type="text/javascript">
        
            function dialog() {

               $("#modal").modal("show");
            }

          



    </script>

}
