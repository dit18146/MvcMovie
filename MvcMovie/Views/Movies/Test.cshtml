
@(Html.Kendo().Grid<Movie>()
    .Name("CasinoGamesGrid")
    .Columns(columns =>
    {
        columns.Bound(m => m.Id);
        columns.Bound(m => m.Title);
        columns.Bound(m => m.Description);
    })
    .Pageable()
    .DataSource(d => d
        .Ajax()
        .Read(r => r.Route("KendoGrid_Test_Read"))
        .PageSize(50)
    )
    )
