@section Scripts
{

    <script type="text/javascript">

            $(document).ready(function () {

                    var submitButtonElement = document.getElementById('subButton');

                    var ajaxSubmitButtonElement = document.getElementById('AjaxSubButton');

                    ajaxSubmitButtonElement.addEventListener('click', function () {
                        $.ajax(
                        {
                            type: "POST",
                            url: "@Url.Action("Json_Update", "Movies")",
                            data: $('#form').serialize(),
                            dataType: "json",
                            success: function (textStatus, xhr) {
                                $("#Status").html("<h3>Database was updated succesfully through Ajax.</h3>");
                                console.log(xhr.status);
                            },

                            error: function (xhr, textStatus) {
                                $("#Status").html("Failed");
                                console.log(xhr.status);
                            }
                        });
                    });

                    $("#form2").on( "submit", function(e) {
                        e.preventDefault();
                        $.ajax({
                            type: "POST",
                            url: "@Url.RouteUrl("Update_Json_Post")",
                            data: $("#form2").serialize(),
                            dataType: "json",
                            success: function(response) {
                                console.log(response);
                            },
                            error: function(xhr, status, error) {
                                console.log(xhr.responseText);
                            }
                        });
                    });
            });
            
            const form = document.getElementById("form3");
            form.addEventListener("submit", (e) => {
            e.preventDefault();
            fetch("@Url.RouteUrl("Update_Json_Post")", {
                    method: "POST",
                    body: new FormData(form)
                });
            });
    </script>
}


