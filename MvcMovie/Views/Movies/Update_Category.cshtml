@model MovieType

@if (Model != null)
{
    <div class="form-group">

        <br />

        <h1 style="text-align: center;">Update Movie Attributes</h1>

        <form asp-route="Update_Category_Post" method="post">

            <label for="Id" class="form-label mt-4">Id</label>

            <input asp-for="Id" type="number" class="form-control" id="Id" aria-describedby="Id" placeholder="Enter Id" readonly>

            <small id="Id" class="form-text text-muted">Category id should be a number</small>

            <br />

            <label for="Title" class="form-label mt-4">Title</label>

            <input asp-for="Name" type="text" class="form-control" id="Id" aria-describedby="Title" placeholder="Enter Name">

            <small id="Id" class="form-text text-muted">Category Name should be a text</small>

            <br />

            <button type="submit" class="btn btn-success btn-lg">Update Database</button>

            <br />

        </form>
    </div>
}
else
{
    <br />

    <h1 style="color:red;"> @ViewData["fail"] </h1>
}