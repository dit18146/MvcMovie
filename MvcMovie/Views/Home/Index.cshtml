@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center" >
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <menu>

        <br />

        <div style=" text-align: center; max-width: 20rem; float: right; margin-left: 10%;" class="card text-white bg-primary mb-3">

                <div class="card-header">

                    <form action = "@Url.RouteUrl("Movies_Index")">

                         <button type="submit" class="btn btn-dark">Movies</button>

                    </form>
                </div>
                <div class="card-body">

                    <h4 class="card-title">Access the database table</h4>

                    <p class="card-text">Access the movie database. Update or delete elements if you want</p>

                </div>

         </div>


        <div style=" text-align: center; max-width: 20rem; float: left; margin-left: 10%;" class="card text-white bg-secondary mb-3">

                <div class="card-header">
                    <form action = "@Url.RouteUrl("Create_Post")">

                    <button type="submit" class="btn btn-light">Create</button>

                </form>

                </div>

                <div class="card-body">

                    <h4 class="card-title">Insert a movie</h4>

                    <p class="card-text">Insert a new movie in the database</p>

                </div>

        </div>

        <div style=" text-align: center; max-width: 20rem;  float: right; margin-left: 10%;" class="card text-white bg-info mb-3">

            <div class="card-header">
                <form action="@Url.RouteUrl("Categories_Index")">

                    <button type="submit" class="btn btn-light">View Categories</button>

                </form>

            </div>

            <div class="card-body">

                <h4 class="card-title">Insert a category</h4>

                <p class="card-text">Insert a new category for the movies in the database</p>

            </div>

        </div>

    </menu>

</div>


